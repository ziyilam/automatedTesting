package executionEngine;

import java.lang.reflect.Method;
import config.ActionKeywords;
import utility.ExcelUtils;

public class DriverScript {
	public static ActionKeywords actionKeywords;
	public static String sActionKeyword;
	public static String sObjectLocator;
	public static Method method[];

	public DriverScript() throws NoSuchMethodException, SecurityException {
		actionKeywords = new ActionKeywords();
		method = actionKeywords.getClass().getMethods();
	}

	public static void main(String[] args) throws Exception {

		String sPath = "C:\\Users\\zy.lam\\eclipse-workspace\\Hybrid Keyword Driven\\src\\dataEngine\\DataEngine.xlsx";
		ExcelUtils.setExcelFile(sPath, "TestSteps");
		for (int iRow = 1; iRow <= 5; iRow++) {
			sActionKeyword = ExcelUtils.getCellData(iRow, 4);
			sObjectLocator = ExcelUtils.getCellData(iRow, 3);
			DriverScript driverScript = new DriverScript();
			driverScript.execute_Action();

		}

	}

	private void execute_Action() throws Exception {
		System.out.println(method[0]);

	}
}
